{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "settings"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["kdeps.io/v1"]
    },
    "kind": {
      "type": "string",
      "enum": ["Workflow"]
    },
    "metadata": {
      "type": "object",
      "required": ["name", "targetActionId"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "targetActionId": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "settings": {
      "type": "object",
      "properties": {
        "apiServerMode": {
          "type": "boolean"
        },
        "apiServer": {
          "type": "object",
          "properties": {
            "hostIp": {
              "type": "string"
            },
            "portNum": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535
            },
            "routes": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["path"],
                "properties": {
                  "path": {
                    "type": "string",
                    "pattern": "^/"
                  },
                  "methods": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "enum": ["GET", "POST", "PUT", "DELETE", "PATCH"]
                    }
                  }
                }
              }
            }
          }
        },
        "agentSettings": {
          "type": "object",
          "properties": {
            "timezone": {
              "type": "string"
            },
            "pythonVersion": {
              "type": "string"
            },
            "pythonPackages": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "requirementsFile": {
              "type": "string"
            },
            "models": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "ollamaUrl": {
              "type": "string",
              "format": "uri"
            }
          }
        },
        "input": {
          "type": "object",
          "required": ["source"],
          "properties": {
            "source": {
              "type": "string",
              "enum": ["api", "audio", "video", "telephony"]
            },
            "audio": {
              "type": "object",
              "properties": {
                "device": {
                  "type": "string"
                }
              }
            },
            "video": {
              "type": "object",
              "properties": {
                "device": {
                  "type": "string"
                }
              }
            },
            "telephony": {
              "type": "object",
              "required": ["type"],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["local", "online"]
                },
                "device": {
                  "type": "string"
                },
                "provider": {
                  "type": "string"
                }
              }
            },
            "transcriber": {
              "type": "object",
              "required": ["mode"],
              "properties": {
                "mode": {
                  "type": "string",
                  "enum": ["online", "offline"]
                },
                "output": {
                  "type": "string",
                  "enum": ["text", "media"]
                },
                "language": {
                  "type": "string"
                },
                "online": {
                  "type": "object",
                  "required": ["provider"],
                  "properties": {
                    "provider": {
                      "type": "string",
                      "enum": ["openai-whisper", "google-stt", "aws-transcribe", "deepgram", "assemblyai"]
                    },
                    "apiKey": {
                      "type": "string"
                    },
                    "region": {
                      "type": "string"
                    },
                    "projectId": {
                      "type": "string"
                    }
                  }
                },
                "offline": {
                  "type": "object",
                  "required": ["engine"],
                  "properties": {
                    "engine": {
                      "type": "string",
                      "enum": ["whisper", "faster-whisper", "vosk", "whisper-cpp"]
                    },
                    "model": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "allOf": [
            {
              "if": {
                "properties": {
                  "source": { "const": "telephony" }
                }
              },
              "then": {
                "required": ["telephony"]
              }
            }
          ]
        }
      }
    },
    "resources": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/resource"
      }
    }
  },
  "$defs": {
    "resource": {
      "type": "object",
      "required": ["apiVersion", "kind", "metadata", "run"],
      "properties": {
        "apiVersion": {
          "type": "string",
          "enum": ["kdeps.io/v1"]
        },
        "kind": {
          "type": "string",
          "enum": ["Resource"]
        },
        "metadata": {
          "type": "object",
          "required": ["actionId", "name"],
          "properties": {
            "actionId": {
              "type": "string",
              "minLength": 1
            },
            "name": {
              "type": "string",
              "minLength": 1
            },
            "description": {
              "type": "string"
            },
            "requires": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "items": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "run": {
          "type": "object"
        }
      }
    }
  }
}
