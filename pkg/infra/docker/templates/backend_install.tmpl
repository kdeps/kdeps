{{- if .InstallOllama }}
# Ollama is pre-installed via base image (ollama/ollama or alpine/ollama)
# We ensure it's available in /usr/local/bin
RUN if [ ! -f /usr/local/bin/ollama ] && [ -f /bin/ollama ]; then ln -s /bin/ollama /usr/local/bin/ollama; fi
{{- else }}
# No LLM backend to install
{{- end }}
