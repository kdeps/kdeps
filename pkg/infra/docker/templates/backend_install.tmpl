{{- if .InstallOllama }}
# Install Ollama from official install script
# Note: The install script automatically detects architecture and downloads the appropriate binary
# We explicitly ensure zstd is installed right before the script runs to avoid extraction errors
RUN if command -v apt-get >/dev/null; then \
      apt-get update && apt-get install -y zstd; \
    elif command -v apk >/dev/null; then \
      apk add --no-cache zstd; \
    fi && \
    curl -fsSL https://ollama.com/install.sh | sh
{{- else }}
# No LLM backend to install
{{- end }}
